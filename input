#------------------------------------------
# Sample vampire input file to perform
# LSF calculation
#------------------------------------------


#------------------------------------------
# Creation attributes:
#------------------------------------------
create:periodic-boundaries-x
create:periodic-boundaries-y
create:periodic-boundaries-z

#create:truncated-octahedron
#create:cube
#create:crystal-structure=bcc
#create:single-spin

#------------------------------------------
# System Dimensions:
#------------------------------------------
dimensions:system-size-x = 4 !nm
dimensions:system-size-y = 4 !nm
dimensions:system-size-z = 4 !nm
#dimensions:particle-size = 1 !nm

#------------------------------------------
# Material Files:
#------------------------------------------
material:file = L10FePt.mat
material:unit-cell-file = L10FePt.ucf

#------------------------------------------
# Simulation attributes:
#------------------------------------------
sim:minimum-temperature = 0.0
sim:maximum-temperature = 800.0
sim:temperature-increment = 40.0
#sim:temperature=500.0
sim:time-steps-increment = 1

#sim:temperature=0
#sim:equilibration-temperature=0

sim:time-step = 1e-15
#sim:equilibration-time-steps = 2000
#sim:loop-time-steps = 10000
sim:total-time-steps = 1000000

#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program = curie-temperature
#sim:program = time-series
sim:integrator = lsf

#------------------------------------------
# Data output
#------------------------------------------
output:temperature
output:material-mean-spin-length
output:material-mean-magnetisation-length
output:output-rate = 1

#------------------------------------------
# Visualization options
#------------------------------------------
#config:atoms

#------------------------------------------
# Sample vampire input file to perform
# benchmark calculation for v4.0
#
#------------------------------------------

#------------------------------------------
# Creation attributes:
#------------------------------------------
create:crystal-structure = NdFeB

dimensions:unit-cell-size = 8.8 !A

dimensions:system-size = 8.8 !nm
#dimensions:system-size-y = 8.8 !nm
#dimensions:system-size-z = 8.8 !nm

#------------------------------------------
# Material Files:
#------------------------------------------
material:file = NdFeB.mat
#------------------------------------------
# Simulation attributes:
#------------------------------------------
sim:minimum-temperature = 0
sim:maximum-temperature = 1500
sim:temperature-increment = 25
sim:equilibration-time-steps = 10000
sim:loop-time-steps = 10000
sim:time-steps-increment = 1

#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program = curie-temperature
sim:integrator = monte-carlo

#------------------------------------------
# data output
#------------------------------------------
output:temperature
output:mean-magnetisation-length

screen:temperature
screen:mean-magnetisation-length
